{
  "name": "SCHUNK FTS Dev",
  "context": "..",
  "dockerFile": "../Dockerfile",
  "workspaceFolder": "/workspace/src",
  "mounts": [
        {
            "source": "${localWorkspaceFolder}",
            "target": "/workspace/src",
            "type": "bind"
        }
  ],
  "overrideCommand": true,
  "runArgs": [
    "--net=host",
    //"--device=/dev/ttyUSB0",
    "--env=ROS_LOCALHOST_ONLY=1",
    "-v", "/dev:/dev",
    "--privileged"
  ],
  "remoteUser": "root",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-iot.vscode-ros",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "twxs.cmake",
        "ms-vscode.cmake-tools",
        "Graphite.gti-vscode"
      ]
    }
  },
  "postCreateCommand": "bash /workspace/src/devcontainer_post_create.sh"
}
